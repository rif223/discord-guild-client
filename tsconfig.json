{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "typings"
  ],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "./lib",
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "outFile": "./typings/index.d.ts",
    "emitDeclarationOnly": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "target": "ESNext"
  }
}
